<%= @restaurant.name %>
<%= @restaurant.address %>
<% @restaurant.reviews.each do |review| %>
<div class="review-container">
  <%= review %>
</div>
<% end %>

<p>Add a review</p>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Add a review", class: "btn btn-primary" %>
<% end %>
